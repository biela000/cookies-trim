doctype html
html(lang='en', dir='ltr')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='Express streaming service')
        meta(name='keywords', content='express, streaming, service')
        meta(name='author', content='Jakub Biela')
        block styles
            link(rel='stylesheet', href='/stylesheets/reset.css')
            link(rel='stylesheet', href='/stylesheets/global.css')
        block fonts
            link(rel='preconnect', href='https://fonts.googleapis.com')
            link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
            link(href='https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&display=swap', rel='stylesheet')
    body
        .body-wrapper
            aside.notifications
                article.notification-template
                    h3.notification-title
                    p.notification-message
            block content
        block scripts
            script(src='/javascript/main.js', type='module')
            script(src='/javascript/utils/notification.js', type='module')
